{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JsonUi": {
    "Logging": {
      "MinimumLevel": "Information",
      "File": {
        "Enabled": true,
        "Path": "/app/data/logs/jsonui.log",
        "FileSizeLimitBytes": 5242880,
        "RollOnFileSizeLimit": true
      },
      "ApplicationInsights": {
        "Enabled": false,
        "ConnectionString": ""
      }
    }
  },
  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Forwarded-For",
    "ClientIdHeader": "X-Api-Key",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/admin/*",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "POST:/mcp/call/*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "GET:/mcp/tools",
        "Period": "1m",
        "Limit": 120
      }
    ]
  }
}
